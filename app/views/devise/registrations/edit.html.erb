<div class="lg:w-1/2">
  <h2 class="mb-4 font-bold">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-4" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "mb-0 leading-none" %> <i class="text-sm">(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "mb-4" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-4" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "mb-0 leading-none" %> <i class="text-sm">(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mb-4" %>
    </div>

    <div class="actions mb-4">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <%= link_to "Back", :back %>

  <p class="mt-10 mb-6">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
  </p>
</div>
